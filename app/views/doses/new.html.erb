<div class="container">
  <div class= 'row justify-content-center'>
    <div class= 'col-md-8'>
      <h1>Crear una dose</h1>
      <%= simple_form_for [@cocktail, @dose], class: 'form' do |f| %>
      <%= f.input :description%>
      <%= f.association :ingredient %>
      <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
      <%= link_to "Volver al listado", cocktails_path(@cocktail) %>
    </div>
  </div>
</div>

