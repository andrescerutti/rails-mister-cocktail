<div class="container">

  <h1>Crear una dose</h1>


 <%= simple_form_for [@cocktail, @dose], class: 'form' do |f| %>
  <%= f.input :description%>
  <%= f.association :ingredient %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>

  <%= link_to "Volver al listado", cocktails_path(@cocktail), class: "btn btn-primary mt-5" %>
</div>

